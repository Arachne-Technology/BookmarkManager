# BookmarkParser Environment Configuration

# =============================================================================
# AI Provider Configuration (at least one required)
# =============================================================================
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
LLAMA_MODEL_PATH=/path/to/local/llama/model
DEFAULT_AI_PROVIDER=claude
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://bookmark_user:bookmark_pass@postgres:5432/bookmark_parser
REDIS_URL=redis://redis:6379

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Application Settings
# =============================================================================
UPLOAD_LIMIT=10mb
UPLOAD_DIR=./uploads
LOG_LEVEL=debug
SESSION_TIMEOUT=14400  # 4 hours in seconds

# =============================================================================
# Development Configuration
# =============================================================================
DEV_DATABASE_SEED=true

# =============================================================================
# Frontend Configuration (for Vite)
# =============================================================================
VITE_API_URL=http://localhost:3001
VITE_NODE_ENV=development